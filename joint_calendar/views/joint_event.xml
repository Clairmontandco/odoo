<?xml version="1.0"?>
<odoo>

    <record id="joint_event_view_search" model="ir.ui.view">
        <field name="name">joint.event.search</field>
        <field name="model">joint.event</field>
        <field name="arch" type="xml">
            <search string="Joint Events">
                <field name="name"
                       string="Subject"
                       filter_domain="[('name', 'ilike', self)]"
                />
                <field name="description" filter_domain="[('description', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <group expand="0" string="Group By...">
                    <filter context="{'group_by': 'attendee'}" name="group_attendee" string="Attendee"/>
                    <filter context="{'group_by': 'rule_id'}" name="group_rule" string="Rule"/>
                    <filter context="{'group_by': 'partner_id'}" name="group_partner_id" string="Contact"/>
                    <filter context="{'group_by': 'date_start'}" name="group_date_start" string="Date"/>
                    <filter context="{'group_by': 'company_id'}" 
                            name="group_company_id" 
                            string="Company"
                            groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="joint_event_view_form" model="ir.ui.view" >
        <field name="name">joint.event.form</field>
        <field name="model">joint.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" class="oe_inline" placeholder='Event'/>
                    </h1>
                    <group>
                        <group>
                            <field name="date_start" string="Starting at"/>
                            <field name="date_stop" string="Ending at"/>
                            <field name="all_day"  class="oe_inline"/>
                        </group>
                        <group>
                            <field name="attendee" 
                                   widget="many2many_tags"
                                   attrs="{'readonly': [('rule_id', '!=', False)]}"
                            />
                            <field name="alarm_ids" widget="many2many_tags"
                            />
                            <field name="partner_id"/>
                            <field name="company_id"                                
                                   options="{'no_create_edit': 1, 'no_quick_create': 1}"
                                   groups="base.group_multi_company"
                            />
                            <field name="privacy" attrs="{'invisible':[('rule_id', '!=', False)]}"/>
                            <field name="res_reference"
                                   readonly="1"
                                   attrs="{'invisible':[('rule_id', '=', False)]}"
                            />
                            <div col="6"
                                 colspan="6"
                                 attrs="{'invisible':[('rule_id', '=', False)]}"
                                 class="text-muted"
                            >
                                Be cautious: changes in the parent object would lead to this event change only in a
                                while. Not immediately
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Technical" invisible="1">
                            <group>
                                <field name="action" options="{'no_quick_create': 1,'no_create_edit': 1}"/>
                                <field name="res_id"/>
                                <field name="rule_id"/>
                                <field name="res_model"/>
                                <field name="res_model_domain"/>
                                <field name="joint_calendar_id"/>
                                <field name="date_delay" widget="float_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="joint_event_view_tree" model="ir.ui.view">
        <field name="name">joint.event.tree</field>
        <field name="model">joint.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="attendee" widget="many2many_tags"/>
                <field name="res_reference"
                       readonly="1"
                       attrs="{'invisible':[('rule_id', '=', False)]}"
                />
                <field name="rule_id" invisible="1"/>
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record id="joint_event_view_calendar" model="ir.ui.view">
        <field name="name">joint.event.calendar</field>
        <field name="model">joint.event</field>
        <field name="arch" type="xml">
            <calendar string="Joint Events"
                      date_start="date_start"
                      date_stop="date_stop"
                      date_delay="date_delay"
                      all_day="all_day"
                      color="rule_id"
                      event_open_popup="false"
                      mode="month"
                      js_class="joint_calendar"
            >
                <field name="name"/>
                <field name="rule_id" filters="1"/>
                <field name="attendee"
                       write_model="calendar.filters"
                       write_field="partner_id"
                       avatar_field="image_128"
                />
                <field name="partner_id" filters="1"/>
                <field name="company_id" groups="base.group_multi_company" filters="1"/>
            </calendar>
        </field>
    </record>
    <record id="joint_event_action_full" model="ir.actions.act_window">
        <field name="name">Joint Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.event</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>
    <record id="joint_event_action" model="ir.actions.act_window">
        <field name="name">Joint Event</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.event</field>
        <field name="view_mode">form,calendar</field>
    </record>

</odoo>
