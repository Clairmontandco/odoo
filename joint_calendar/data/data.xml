<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mt_joint_event_notify" model="mail.message.subtype">
        <field name="name">Joint Events Notifications</field>
        <field name="res_model">joint.event</field>
        <field name="default" eval="False"/>
        <field name="hidden" eval="True"/>
        <field name="description">Joint Events Notifications</field>
    </record>

    <data noupdate="1">
        <record id="notification_by_alarm" model="mail.template">
            <field name="name">Joint Event Notification</field>
            <field name="model_id" ref="joint_calendar.model_joint_event"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
<p>Please be aware of the event: <t t-out="object.name"></t>. It should take place at  <t t-out="ctx['display_date']"></t>!</p>
            </field>
        </record>
    </data>

</odoo>
